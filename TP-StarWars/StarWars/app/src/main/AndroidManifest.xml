<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.eni.ecole.starwars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application.SWApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_rebel"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_rebel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SourcesActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".PeopleDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".PlanetDetailActivity" />

        <service
            android:name=".services.PeopleService"
            android:exported="false" />

        <activity
            android:name=".PlanetDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />

        <service
            android:name=".services.ListPlanetService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>