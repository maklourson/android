<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        style="@style/TextPerso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed"
        android:typeface="normal"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOne"
        android:layout_below="@+id/txtView1"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:background="@drawable/selector_button"
        android:textColor="@color/colorWhite"
        android:text="Button"
        android:layout_margin="5dp"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnTwo"
        android:layout_below="@+id/btnOne"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:background="@drawable/selector_button_radius"
        android:textColor="@color/colorWhite"
        android:text="Button Two"
        android:layout_margin="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtView2"
        android:layout_below="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:text="Elevation"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/colorRouge"
        />

    <TextView
        android:id="@+id/txtView3"
        android:layout_below="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/corner_shape"
        android:text="Background"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/colorWhite"
        />

    <ImageView
        android:layout_below="@+id/txtView3"
        android:id="@+id/ivlayer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/layer_demo" />

    <Button
        android:layout_below="@+id/ivlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ripple"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ripple_demo"/>

</RelativeLayout>